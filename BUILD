#
# Provide top level aliases for ease of access
#

alias(
  name = "retool",
  actual = "//retool:bin",
)

alias(
  name = "yarn",
  actual = "@yarn//:yarn",
)

alias(
  name = "bsb",
  actual = "//reason/private/bs:bsb.exe"
)

alias(
  name = "bsc",
  actual = "//reason/private/bs:bsc.exe"
)

alias(
  name = "refmt",
  actual = "//reason/private/bs:refmt.exe"
)

alias(
  name = "rtop",
  actual = "@reason-cli//:rtop"
)

filegroup(
  name = "bsconfig",
  srcs = ["bsconfig.json"],
  visibility = ["//:__subpackages__"],
)
